{
  "name": "zevro-backend",
  "version": "1.0.0",
  "description": "ZEVRO Restaurant Backend API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "cd Server && nodemon server.js",
    "build": "npm install --production=false && cd Client && npm install --production=false && npm run build",
    "start": "cd Server && node server.js",
    "server": "cd Server && npm run dev",
    "install-all": "npm install && cd Client && npm install && cd ../Server && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": ["restaurant", "franchise", "api", "mongodb", "express"],
  "author": "ZEVRO Team",
  "license": "MIT"
}
